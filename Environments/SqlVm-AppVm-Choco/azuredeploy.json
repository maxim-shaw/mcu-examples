        //         }
        //     }
        // },
        // Setup Chocolatey (package management tool)
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2019-07-01",
            "name": "[concat(variables('appVmName'),'/', 'SetupChocolatey')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/',variables('appVmName'))]"
                //"[concat('Microsoft.Compute/virtualMachines/', variables('appVmName'),'/extensions/', 'InstallWebServer')]"
            ],
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.10",
                "autoUpgradeMinorVersion":true,
                "settings": {
                    "fileUris": [
                        "https://raw.githubusercontent.com/maxim-shaw/mcu-examples/main/Environments/SqlVm-AppVm-Choco/artifacts/chocopackages.ps1"
                    ],
                    "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File ', 'chocopackages.ps1')]"
                },
                 "protectedSettings": {
                    "commandToExecute": "",
                    "storageAccountName": "",
                    "storageAccountKey": "",
                    "managedIdentity" : {}
                }
            }
        }
    ]
}