        //         "autoUpgradeMinorVersion": true,
        //         "settings": {
        //             "fileUris": [
        //                 "[concat(variables('setupChocolateyScriptLocation'), variables('setupChocolateyScriptFileName'))]"
        //             ],
        //             "commandToExecute": "[concat('powershell -ExecutionPolicy bypass -File ', variables('setupChocolateyScriptFileName'),' -chocoPackages ', variables('chocoPackages'))]"
        //         },
        //         "protectedSettings": {
